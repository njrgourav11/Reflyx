# AI Coding Assistant Backend Configuration
# Copy this file to .env and configure your settings

# =============================================================================
# CORE SERVICES
# =============================================================================

# Vector Database (Qdrant)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=code_chunks

# Local LLM Service (Ollama)
OLLAMA_URL=http://localhost:11434

# Cache Service (Redis) - Optional but recommended
REDIS_URL=redis://localhost:6379

# =============================================================================
# AI MODELS
# =============================================================================

# Embedding Model for Semantic Search
# Options: all-MiniLM-L6-v2, all-mpnet-base-v2, paraphrase-MiniLM-L3-v2
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Default LLM Model
# Options: codellama:7b-code, deepseek-coder:6.7b, qwen2.5-coder:7b
DEFAULT_LLM_MODEL=codellama:7b-code

# =============================================================================
# CLOUD API KEYS (OPTIONAL - FREE TIERS AVAILABLE)
# =============================================================================

# OpenAI API Key (Free tier: $5 credit)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Anthropic API Key (Free tier available)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# Groq API Key (Free tier: 14,400 requests/day)
# Get from: https://console.groq.com/keys
GROQ_API_KEY=

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Code Indexing
MAX_CHUNK_SIZE=500
CHUNK_OVERLAP=50
MAX_RETRIEVAL_COUNT=10
SIMILARITY_THRESHOLD=0.7

# Request Handling
MAX_CONCURRENT_REQUESTS=50
REQUEST_TIMEOUT=30
MAX_CONTEXT_LENGTH=8192

# =============================================================================
# FILE PROCESSING
# =============================================================================

# Supported File Extensions (comma-separated)
SUPPORTED_EXTENSIONS=.py,.js,.ts,.jsx,.tsx,.java,.cpp,.c,.h,.hpp,.rs,.go,.php,.rb,.cs,.swift,.kt,.scala

# Ignore Patterns (comma-separated)
IGNORE_PATTERNS=node_modules/**,.git/**,*.min.js,dist/**,build/**,venv/**,__pycache__/**,*.pyc,.pytest_cache/**,coverage/**,.coverage,*.log,logs/**

# =============================================================================
# SECURITY
# =============================================================================

# API Key for Backend Authentication (Optional)
API_KEY=

# CORS Origins (comma-separated)
CORS_ORIGINS=*

# =============================================================================
# LOGGING & MONITORING
# =============================================================================

# Log Level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Storage Directories
CACHE_DIR=./cache
LOGS_DIR=./logs

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server Host and Port
HOST=0.0.0.0
PORT=8000

# Debug Mode (Development only)
DEBUG=false

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Model Download Settings
HF_HOME=./cache/huggingface
TRANSFORMERS_CACHE=./cache/transformers

# GPU Settings (if available)
CUDA_VISIBLE_DEVICES=0
TORCH_DEVICE=auto

# Memory Management
MAX_MEMORY_USAGE=4GB
EMBEDDING_BATCH_SIZE=32

# =============================================================================
# DEPLOYMENT SETTINGS
# =============================================================================

# Number of Worker Processes (Production)
WORKERS=4

# Database Connection Pool
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Health Check Settings
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/Disable Features
ENABLE_WEBSOCKET=true
ENABLE_STREAMING=true
ENABLE_CACHING=true
ENABLE_METRICS=true

# Experimental Features
ENABLE_HYBRID_SEARCH=false
ENABLE_CODE_COMPLETION=true
ENABLE_AUTO_REFACTOR=false
